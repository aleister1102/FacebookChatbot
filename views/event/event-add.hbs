<div class="container">
    <h1 class="mb-3">Thêm mới hoạt động</h1>
    <form method="POST" action="/event/list">
        <div class="mb-3">
            <label for="name-input" class="form-label">Tên hoạt động</label>
            <input type="text" class="form-control" id="name-input" name="name">
        </div>
        <div class="mb-3">
            <label for="datetime-input" class="form-label">Thời gian</label>
            <input type="datetime-local" class="form-control" id="datetime-input" name="datetime">
        </div>
        <div class="mb-3">
            <label for="location-input" class="form-label">Địa điểm</label>
            <input type="text" class="form-control" id="location-input" name="location">
        </div>
        <button type="submit" class="btn btn-primary">Thêm</button>
    </form>
</div>